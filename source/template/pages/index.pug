	mixin buttons
		ul.btn-block.btn-group
			each item in buttons
				li.btn-block__item
						case item
							when "Интересует это авто"
								a(href="javascript:void(0);" data-form="interest-auto").btn-group__link.btn.btn_color.interest.showForm #{item}
									svg.interest-icon.btn__icon
										use(xlink:href="templates/_ares/images/sprite.svg#interest")
							when "Купить в рассрочку"
								a(href="#").btn-group__link.btn #{item}
									svg.payment-icon.btn__icon
										use(xlink:href="templates/_ares/images/sprite.svg#shopping-cart")
							when "Система Trade-In"
								a(href="#").btn-group__link.btn #{item}
