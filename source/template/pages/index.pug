block content
	div.btn-round
		.btn-round__item.scroll-top(data-href=".header")
			svg.btn-round__icon.scroll-top__icon
				use(xlink:href="templates/_ares/images/sprite.svg#up")
		.btn-round__item.btn-call.animated.infinite.pulse.showForm(data-form="request-call")
			svg.btn-round__icon.btn-call__icon
				use(xlink:href="templates/_ares/images/sprite.svg#phone")
	.layout
		.forms-wrapper
			.request-call
				.form
					.close.form__close.closeForm
						svg.close-icon
							use(xlink:href="templates/_ares/images/sprite.svg#close")
					.color-title.form__title Заказать звонок
					include ../common/request-call-form
			.interest-auto
				.form
					.close.form__close.closeForm
						svg.close-icon
							use(xlink:href="templates/_ares/images/sprite.svg#close")
					.color-title.form__title Интересует это авто
					.form__tabs.tabs
						ul.tabs__nav
							li.tabs__nav-item(data-tab="1")
								a.tabs__nav-link.tabs__nav-link_active Заказать Тест-Драйв
							li.tabs__nav-item(data-tab="2")
								a.tabs__nav-link Обратный звонок
						ul.tabs__list
							li.tabs__item.tabs__item-1.tabs__item_active
								include ../common/test-drive-form
							li.tabs__item.tabs__item-2
								include ../common/request-call-form2
